# Environment variables for AI Interview Chatbot Backend

# Gemini API Configuration
GEMINI_API_KEY=placeholder_key_for_testing

# Flask Configuration
SECRET_KEY=dev_secret_key_change_in_production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///app.db

# Cloud Storage Configuration (for production)
CLOUD_STORAGE_BUCKET=your_storage_bucket_name
CLOUD_STORAGE_CREDENTIALS_PATH=path_to_credentials.json

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Interview Configuration
DEFAULT_INTERVIEW_DURATION=30  # minutes
MAX_RECORDING_SIZE=100  # MB

